{
  "translation_styles": {
    "literal": {
      "description": "直译，贴近原文结构",
      "characteristics": [
        "保持原文的句式结构",
        "逐词逐句翻译",
        "保留原文的表达方式",
        "适合技术文档、法律合同等需要精确翻译的场景"
      ]
    },
    "free": {
      "description": "意译，更符合目标语言习惯",
      "characteristics": [
        "调整句式以符合目标语言习惯",
        "使用地道的表达方式",
        "注重整体语义而非逐字翻译",
        "适合日常交流、社交媒体等场景"
      ]
    },
    "professional": {
      "description": "专业术语，适合学术、商务",
      "characteristics": [
        "使用专业术语",
        "保持正式严谨的表达",
        "适合学术论文、商务报告、技术文档",
        "准确传达专业概念"
      ]
    },
    "casual": {
      "description": "口语化，适合社交媒体",
      "characteristics": [
        "使用口语化表达",
        "轻松自然的语气",
        "适合社交媒体、日常对话",
        "增强亲和力和互动感"
      ]
    }
  },
  "language_mappings": {
    "en": {
      "name": "英文",
      "full_name": "English",
      "direction": "left_to_right"
    },
    "zh": {
      "name": "中文",
      "full_name": "Chinese",
      "direction": "left_to_right"
    },
    "ja": {
      "name": "日文",
      "full_name": "Japanese",
      "direction": "left_to_right"
    },
    "ko": {
      "name": "韩文",
      "full_name": "Korean",
      "direction": "left_to_right"
    },
    "fr": {
      "name": "法文",
      "full_name": "French",
      "direction": "left_to_right"
    },
    "de": {
      "name": "德文",
      "full_name": "German",
      "direction": "left_to_right"
    },
    "es": {
      "name": "西班牙文",
      "full_name": "Spanish",
      "direction": "left_to_right"
    }
  },
  "formatting_rules": {
    "punctuation": {
      "zh": {
        "use_full_width": true,
        "comma": "，",
        "period": "。"
      },
      "en": {
        "use_half_width": true,
        "comma": ",",
        "period": "."
      },
      "ja": {
        "use_full_width": true,
        "comma": "、",
        "period": "。"
      }
    },
    "number_format": {
      "zh": "使用中文数字或阿拉伯数字，根据上下文",
      "en": "使用阿拉伯数字",
      "ja": "使用中文数字或阿拉伯数字，根据上下文"
    },
    "date_format": {
      "zh": "YYYY年MM月DD日",
      "en": "MM/DD/YYYY",
      "ja": "YYYY年MM月DD日"
    }
  },
  "common_terms": {
    "tech": {
      "AI": {
