{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/quality-gate.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/documentation-validator.sh",
            "timeout": 15
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "CLAUDE_COMMAND_NAME=ai-coding-java-review CLAUDE_EXIT_CODE=$? bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/review-report-hook.sh",
            "timeout": 60,
            "enabled": true,
            "description": "自动生成代码审查报告"
          }
        ]
      }
    ]
  }
}