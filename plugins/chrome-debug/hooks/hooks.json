{
  "hooks": {
    "PreToolUse": [{
      "matcher": "Write|Edit|Bash",
      "hooks": [{
        "type": "command",
        "command": "bash ${CLAUDE_PLUGIN_ROOT}/scripts/validate-chrome.sh",
        "timeout": 10,
        "conditions": {
          "files": ["*.js", "*.html", "*.css", "chrome-debug*"],
          "patterns": ["chrome", "devtools", "debug"]
        }
      }]
    }]
  }
}