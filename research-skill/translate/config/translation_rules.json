  "context_rules": {
    "social_media": {
      "default_style": "casual",
      "use_emoji": true,
      "short_sentences": true,
      "hashtags": true
    },
    "business": {
      "default_style": "professional",
      "use_emoji": false,
      "formal_tone": true,
      "professional_terminology": true
    },
    "academic": {
      "default_style": "professional",
      "use_emoji": false,
      "formal_tone": true,
      "cite_sources": true
    },
    "technical": {
      "default_style": "literal",
      "use_emoji": false,
      "preserve_terminology": true,
      "technical_accuracy": true
    }
  },
  "post_translation_actions": {
    "polish": {
      "enabled": true,
      "description": "翻译后润色，优化表达",
      "focus_areas": ["grammar", "vocabulary", "flow"]
    },
    "humanize": {
      "enabled": true,
      "description": "翻译后去AI味，使表达更自然",
      "level": "medium"
    }
  }
}
